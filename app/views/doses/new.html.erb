<h1>Add Doses for <%= @cocktail.name %></h1>

<%= simple_form_for([@cocktail,@dose])  do |f| %>

  <div class="form-inputs">
    <%= f.input :description %>
    <%= f.association :ingredient, collection: Move.all %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
